<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alarm.Model.AddAlarmDevice"
    android:background="@drawable/bakground_gradient"
    android:padding="20dp">

    <ImageView
        android:contentDescription="@string/image"
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha="0.1"
        android:src="@drawable/logo"
        />

    <ImageView
        android:contentDescription="@string/image"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_dashboard_white_24dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz urządzenie"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_below="@id/imageView"
        android:id="@+id/tv_tit"/>


        <ListView
            android:layout_below="@id/tv_tit"
            android:layout_above="@id/btn_cofnij2"
            android:background="#51ffffff"
            android:id="@+id/list_addalarm"
            android:layout_width="match_parent"
            android:layout_height="400dp" />




    <Button
        android:id="@+id/btn_cofnij2"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_gradient2_yellow"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Wróć" />


</RelativeLayout>